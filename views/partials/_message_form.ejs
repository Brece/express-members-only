<!-- don't render when req.user is undefined; no user logged in-->
<% if (user) { %>
    <div class="mb-8 sm:mb-10 md:mb-12 py-4 px-3 sm:px-4 rounded-2xl bg-dark border-2 border-white c-message-form">
        <h2>Add a new message</h2>
        <%- include('_hint_messages') %>

        <form
            action="/user/create-message"
            method="POST"
            class="c-form">
            <div class="c-form__group">
                <label for="title">Title</label>
                <input
                    type="text"
                    name="title"
                    id="title"
                    value="<%= message ? message.title : '' %>"
                    required>
            </div>
            <div class="c-form__group">
                <label for="text">Text</label>
                <textarea name="text" id="text" maxlength="499" required><%= message ? message.text : '' %></textarea>
            </div>
            <div class="c-form__group">
                <button type="submit" class="c-btn c-btn--submit">Add Message</button>
            </div>
        </form>
    </div>
<% } %>
